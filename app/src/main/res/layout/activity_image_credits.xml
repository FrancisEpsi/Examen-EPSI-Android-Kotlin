<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageCreditsActivity">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ImageCredits_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_ImageCredits_Description"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="256px"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="256px"
            android:layout_height="256px"
            app:srcCompat="@drawable/avatar"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coding.png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by surang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.flaticon.com/authors/surang" />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="256px"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="256px"
            android:layout_height="256px"
            app:srcCompat="@drawable/back_icon"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="arrow-left.png (alias back_icon_XXXX.png/.jpeg)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by ariefstudio (remastered by me)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.flaticon.com/authors/ariefstudio" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>